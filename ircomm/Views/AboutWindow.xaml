<Window x:Class="ircomm.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About IRComm" Width="400" Height="220" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="ircomm" FontSize="20" FontWeight="Bold" Margin="0,0,0,0" />
            <TextBlock Text="Version 1" Margin="0,0,0,8" />
            <TextBlock Text="A lightweight IRC client." TextWrapping="Wrap" />
            <TextBlock Text="Licensed under GPLv3" TextWrapping="Wrap" Margin="0,0,0,8"/>
            <TextBlock Text="https://github.com/uncognic/ircomm" TextWrapping="Wrap" />


        </StackPanel>

        <Button x:Name="OkButton" Grid.Row="1" Content="OK" Width="90" HorizontalAlignment="Right" IsDefault="True" Click="OkButton_Click" Margin="0,12,0,0"/>
    </Grid>
</Window>