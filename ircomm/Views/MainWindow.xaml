<Window x:Class="ircomm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ircomm"
        mc:Ignorable="d"
        Title="ircomm IRC Client"
        Height="450"
        Width="800"
        MinWidth="700"
        MinHeight="420"
        FontSize="12">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="PreferencesMenuItem" Header="_Preferences" Click="PreferencesMenuItem_Click" />
                <Separator />
                <MenuItem x:Name="DisconnectMenuItem" Header="_Disconnect" Click="DisconnectMenuItem_Click" />
                <MenuItem x:Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Chat">
                <MenuItem x:Name="ExportChatMenuItem" Header="_Export Chat" Click="ExportChatMenuItem_Click"/>
                <MenuItem x:Name="ClearChatMenuItem" Header="_Clear Chat" Click="ClearChatMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Profiles">
                <MenuItem x:Name="AddProfileMenuItem" Header="_Add Profile" Click="AddProfileMenuItem_Click" />
                <MenuItem x:Name="EditProfileMenuItem" Header="_Edit Profile" Click="EditProfileMenuItem_Click" />
                <MenuItem x:Name="DeleteProfileMenuItem" Header="_Delete Profile" Click="DeleteProfileMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem x:Name="AboutMenuItem" Header="_About" Click="AboutMenuItem_Click" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Padding="2,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Disconnected." />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="BusyIndicator" Width="100" Height="12" IsIndeterminate="True" Visibility="Collapsed" />
            </StatusBarItem>
        </StatusBar>


        <Grid Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,6,0" Grid.Column="0" />
                <ComboBox x:Name="ProfileComboBox" Width="200" DisplayMemberPath="Name" Grid.Column="1" VerticalAlignment="Center" />
                <Button x:Name="ConnectButton" Content="Connect" Width="80" Grid.Column="2" Margin="6,0,0,0" VerticalAlignment="Center" />
                <Button x:Name="DirectConnectionButton" Content="Direct Connection..." Width="120" Grid.Column="4" Margin="6,0,0,0" VerticalAlignment="Center" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Margin="4" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Channels" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" />
                        <Button x:Name="AddChannelButton" Content="Join" Width="70" Grid.Column="1" HorizontalAlignment="Right" />
                    </Grid>

                    <Border Grid.Row="1" Margin="4" Padding="2" CornerRadius="3" BorderBrush="#DDDDDD" BorderThickness="1">
                        <ListBox x:Name="ChannelsListBox" Margin="0" />
                    </Border>
                </Grid>


                <GridSplitter Grid.Column="1"
                              Width="4"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ShowsPreview="True"
                              Background="#EAEAEA"
                              Cursor="SizeWE" />


                <Grid Grid.Column="2" Margin="4,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ChannelTitle" Text="channelname" FontWeight="Bold" Margin="2,0,2,6" Grid.Row="0" />
                    <Border Grid.Row="1" Margin="0" Padding="6" CornerRadius="3" BorderBrush="#DDDDDD" BorderThickness="1" Background="#FBFBFB">
                        <ListBox x:Name="ChatListBox" Margin="0" />
                    </Border>
                </Grid>


                <GridSplitter Grid.Column="3"
                              Width="4"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ShowsPreview="True"
                              Background="#EAEAEA"
                              Cursor="SizeWE" />


                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="UsersTitle" Text="Users" FontWeight="Bold" Margin="4" Grid.Row="0" />
                    <Border Grid.Row="1" Margin="4" Padding="2" CornerRadius="3" BorderBrush="#DDDDDD" BorderThickness="1">
                        <ListBox x:Name="UsersListBox" Margin="0" />
                    </Border>
                </Grid>
            </Grid>

  
            <Grid Grid.Row="2" Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageTextBox"
                         Grid.Column="0"
                         Height="28"
                         VerticalContentAlignment="Center"
                         AcceptsReturn="True"
                         Margin="0"
                         Padding="4" />

                <Button x:Name="SendButton"
                        Grid.Column="1"
                        Content="Send"
                        Width="80"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center" />
            </Grid>
        </Grid>
    </DockPanel>
</Window>
