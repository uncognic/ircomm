<Window x:Class="ircomm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ircomm"
        mc:Ignorable="d"
        Title="ircomm IRC Client" Height="500" Width="900"
        MinHeight="400" MinWidth="650"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1A8AD4" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF005A9E" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{DynamicResource SubtleForegroundBrush}" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem x:Name="PreferencesMenuItem" Header="_Preferences" Click="PreferencesMenuItem_Click" InputGestureText="Ctrl+," />
                <Separator />
                <MenuItem x:Name="DisconnectMenuItem" Header="_Disconnect" Click="DisconnectMenuItem_Click" />
                <MenuItem x:Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click" InputGestureText="Alt+F4" />
            </MenuItem>
            <MenuItem Header="_Chat">
                <MenuItem x:Name="ExportChatMenuItem" Header="_Export Chat" Click="ExportChatMenuItem_Click"/>
                <MenuItem x:Name="ClearChatMenuItem" Header="_Clear Chat" Click="ClearChatMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Profiles">
                <MenuItem x:Name="AddProfileMenuItem" Header="_Add Profile" Click="AddProfileMenuItem_Click" />
                <MenuItem x:Name="EditProfileMenuItem" Header="_Edit Profile" Click="EditProfileMenuItem_Click" />
                <MenuItem x:Name="DeleteProfileMenuItem" Header="_Delete Profile" Click="DeleteProfileMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem x:Name="AboutMenuItem" Header="_About" Click="AboutMenuItem_Click" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" MinWidth="120" MaxWidth="280" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="{DynamicResource AltControlBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="6" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="CONNECTION" Style="{StaticResource PanelHeader}" Margin="0,0,0,4" />
                            
                            <ComboBox x:Name="ProfileComboBox" 
                                      DisplayMemberPath="Name" 
                                      Margin="0,0,0,6" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="ConnectButton" 
                                        Content="Connect" 
                                        Style="{StaticResource AccentButton}"
                                        Grid.Column="0" 
                                        Margin="0,0,2,0" />
                                <Button x:Name="DirectConnectionButton" 
                                        Content="Direct..." 
                                        ToolTip="Direct Connection"
                                        Grid.Column="1" 
                                        Margin="2,0,0,0" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Padding="6,6,6,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CHANNELS" Style="{StaticResource PanelHeader}" VerticalAlignment="Center" />
                            <Button x:Name="AddChannelButton" 
                                    Content="+" 
                                    ToolTip="Join Channel"
                                    Width="20" Height="20"
                                    FontSize="12" FontWeight="Bold"
                                    Grid.Column="1" />
                        </Grid>
                    </Border>

                    <ListBox x:Name="ChannelsListBox" 
                             Grid.Row="2" 
                             Margin="4,0,4,4"
                             BorderThickness="0"
                             Background="Transparent" />
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" 
                          Width="3" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"
                          Background="Transparent" />

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="140" MinWidth="100" MaxWidth="220" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Padding="8,6" 
                            Background="{DynamicResource AltControlBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="0,0,0,1">
                        <TextBlock x:Name="ChannelTitle" 
                                   Text="channelname" 
                                   FontSize="13" FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </Border>

                    <ListBox x:Name="ChatListBox" 
                             Grid.Row="1" 
                             Margin="4"
                             Padding="2"
                             BorderThickness="1"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled" />

                    <Border Grid.Row="2" 
                            Padding="6" 
                            Background="{DynamicResource AltControlBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MessageTextBox" 
                                     Grid.Column="0" 
                                     Height="24"
                                     VerticalContentAlignment="Center"
                                     Padding="4,2" />
                            <Button x:Name="SendButton" 
                                    Grid.Column="1" 
                                    Content="Send" 
                                    Style="{StaticResource AccentButton}"
                                    Width="60" Height="24"
                                    Margin="6,0,0,0" />
                        </Grid>
                    </Border>
                </Grid>

                <GridSplitter Grid.Column="1" 
                              Width="3" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Stretch"
                              Background="Transparent" />

                <Border Grid.Column="2" 
                        Background="{DynamicResource AltControlBrush}"
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="6">
                            <TextBlock x:Name="UsersTitle" 
                                       Text="USERS" 
                                       Style="{StaticResource PanelHeader}" />
                        </Border>

                        <ListBox x:Name="UsersListBox" 
                                 Grid.Row="1" 
                                 Margin="4,0,4,4"
                                 BorderThickness="0"
                                 Background="Transparent" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Border Grid.Row="2" 
                Background="{DynamicResource AltControlBrush}"
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="7" Height="7" Fill="#FF666666" Margin="0,0,6,0" 
                             x:Name="StatusIndicator" />
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Disconnected" 
                               FontSize="11"
                               Foreground="{DynamicResource SubtleForegroundBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <ProgressBar x:Name="BusyIndicator" 
                             Grid.Column="2"
                             Width="80" Height="12" 
                             IsIndeterminate="True" 
                             Visibility="Collapsed"
                             VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>
