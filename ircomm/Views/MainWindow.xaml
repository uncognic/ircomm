<Window x:Class="ircomm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ircomm"
        mc:Ignorable="d"
        Title="ircomm IRC Client" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="PreferencesMenuItem" Header="_Preferences" Click="PreferencesMenuItem_Click" />
                <Separator />
                <MenuItem x:Name="DisconnectMenuItem" Header="_Disconnect" Click="DisconnectMenuItem_Click" />
                <MenuItem x:Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Chat">
                <MenuItem x:Name="ExportChatMenuItem" Header="_Export Chat" Click="ExportChatMenuItem_Click"/>
                <MenuItem x:Name="ClearChatMenuItem" Header="_Clear Chat" Click="ClearChatMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Profiles">
                <MenuItem x:Name="AddProfileMenuItem" Header="_Add Profile" Click="AddProfileMenuItem_Click" />
                <MenuItem x:Name="EditProfileMenuItem" Header="_Edit Profile" Click="EditProfileMenuItem_Click" />
                <MenuItem x:Name="DeleteProfileMenuItem" Header="_Delete Profile" Click="DeleteProfileMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem x:Name="AboutMenuItem" Header="_About" Click="AboutMenuItem_Click" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Disconnected." />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="BusyIndicator" Width="120" Height="14" IsIndeterminate="True" Visibility="Collapsed" />
            </StatusBarItem>
        </StatusBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,6,0" Grid.Column="0" />
                <ComboBox x:Name="ProfileComboBox" Width="220" Margin="0,0,12,0" DisplayMemberPath="Name" Grid.Column="1" />
                <Button x:Name="ConnectButton" Content="Connect" Width="90" Grid.Column="2" />
                <Button x:Name="DirectConnectionButton" Content="Direct Connection..." Width="130" Grid.Column="4" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="1" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="1" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Channels" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" />
                        <Button x:Name="AddChannelButton" Content="Add channel" Grid.Column="1" VerticalAlignment="Center" Margin="8,0,0,0" />
                    </Grid>

                    <ListBox x:Name="ChannelsListBox" Margin="4" Grid.Row="1" />
                </Grid>

                <Grid Grid.Column="2" Margin="6,6,6,6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ChannelTitle" Text="channelname" FontWeight="Bold" Margin="4,0,4,6" Grid.Row="0" />
                    <ListBox x:Name="ChatListBox" Grid.Row="1" Margin="4" />
                </Grid>

                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="UsersTitle" Text="Users" FontWeight="Bold" Margin="4" Grid.Row="0" />
                    <ListBox x:Name="UsersListBox" Margin="4" Grid.Row="1" />
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="MessageTextBox" Grid.Column="0" Height="24" VerticalContentAlignment="Center" AcceptsReturn="True" />
                <Button x:Name="SendButton" Grid.Column="1" Content="Send" Width="90" Margin="8,0,0,0" />
            </Grid>
        </Grid>
    </DockPanel>
</Window>
