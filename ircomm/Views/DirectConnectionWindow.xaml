<Window x:Class="ircomm.DirectConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Direct Connection" Width="420" Height="200" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Margin="12">
        <TextBlock Text="Direct Connection" FontWeight="Bold" Margin="0,0,0,8" />

        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
            <TextBlock Text="Server:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="ServerTextBox" Width="280"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
            <TextBlock Text="Port:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="PortTextBox" Width="100" Text="6667"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
            <TextBlock Text="Username:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox" Width="280"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="OkButton" Content="Connect" Width="90" IsDefault="True" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="90" Margin="8,0,0,0" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>