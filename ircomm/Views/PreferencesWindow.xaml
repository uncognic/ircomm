<Window x:Class="ircomm.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Width="520" Height="260" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Margin="12">
        <TextBlock Text="Preferences" FontWeight="Bold" Margin="0,0,0,8" />
        <TextBlock Text="Application preferences" Margin="0,0,0,12" />

        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
            <CheckBox x:Name="AutoSaveCheckBox" Content="Automatically save chat to file" Margin="0,0,8,6"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Save file:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="AutoSavePathTextBox" Width="320" />
                <Button x:Name="BrowseButton" Content="Browse..." Margin="8,0,0,0" Click="BrowseButton_Click" Width="80"/>
            </StackPanel>
            <TextBlock Text="When enabled, chat lines will be appended to the file." FontStyle="Italic" FontSize="11" Margin="0,6,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="90" IsDefault="True" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="90" IsCancel="True" Margin="8,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>